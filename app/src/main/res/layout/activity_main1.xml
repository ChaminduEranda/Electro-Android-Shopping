<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1"
    android:orientation="vertical"
    android:background="@drawable/background_image_one_signin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/btn_ab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#257BC1"
            android:text="About Us"
            android:textSize="24dp"

            android:textStyle="bold"

            android:textColor="#031477" />

        <Button
            android:id="@+id/btn_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_person"
            android:layout_marginLeft="140dp"

            />



        <Button
            android:id="@+id/btn_ct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_shopping_cart_white_24dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>